                                   SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Settings_16x.png" 
                                   Command="{x:Static syncfusion:RibbonCommands.OpenBackStage}" 
                                   CommandTarget="{Binding ElementName=Ribbon}">
            <syncfusion:RibbonButton.CommandParameter>
              <!--If we passes false it will hide the backstage otherwise it will show the backstage-->
              <system:Boolean>true</system:Boolean>
            </syncfusion:RibbonButton.CommandParameter>
            <syncfusion:RibbonButton.ToolTip>
              <syncfusion:ScreenTip MinWidth="150" MaxWidth="400" Description="{lex:Loc ribbon_Settings}" VerticalOffset="10" ImageSource="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Settings_32x.png">
                <StackPanel Orientation="Vertical" Width="300">
                  <TextBlock Text="{lex:Loc screentip_SettingsText}" TextWrapping="Wrap" />
                </StackPanel>
              </syncfusion:ScreenTip>
            </syncfusion:RibbonButton.ToolTip>
          </syncfusion:RibbonButton>
        </syncfusion:QuickAccessToolBar>
      </syncfusion:Ribbon.QuickAccessToolBar>

      <!-- 
      /*   
      /*   Back Stage
      /*
      -->
      <syncfusion:Ribbon.BackStage>
        <syncfusion:Backstage>
          <syncfusion:BackStageCommandButton x:Name="ButtonSaveBackStage" 
                                             Header="{lex:Loc ribbon_Save}"
                                             Icon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Save_16x.png" 
                                             Command="{Binding ExecuteRibbonCommand}" 
                                             CommandParameter="{Binding Name ,RelativeSource={RelativeSource Self}}">
            <syncfusion:RibbonButton.ToolTip>
              <syncfusion:ScreenTip MinWidth="150" MaxWidth="400" Description="{lex:Loc ribbon_Save}" VerticalOffset="10" ImageSource="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Save_16x.png">
                <StackPanel Orientation="Vertical" Width="300">
                  <TextBlock Text="{lex:Loc screentip_SaveText}" TextWrapping="Wrap" />
                </StackPanel>
              </syncfusion:ScreenTip>
            </syncfusion:RibbonButton.ToolTip>
          </syncfusion:BackStageCommandButton>
          <syncfusion:BackStageCommandButton x:Name="ButtonRefreshBackStage"
                                             Header="{lex:Loc ribbon_Refresh}"
                                             Icon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Refresh_16x.png" 
                                             Command="{Binding ExecuteRibbonCommand}" 
                                             CommandParameter="{Binding Name ,RelativeSource={RelativeSource Self}}">
            <syncfusion:RibbonButton.ToolTip>
              <syncfusion:ScreenTip MinWidth="150" MaxWidth="400" Description="{lex:Loc ribbon_Refresh}" VerticalOffset="10" ImageSource="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Refresh_16x.png">
                <StackPanel Orientation="Vertical" Width="300">
                  <TextBlock Text="{lex:Loc screentip_RefreshText}" TextWrapping="Wrap" />
                </StackPanel>
              </syncfusion:ScreenTip>
            </syncfusion:RibbonButton.ToolTip>
          </syncfusion:BackStageCommandButton>
          <syncfusion:BackStageSeparator/>

          <syncfusion:BackstageTabItem Header="{lex:Loc settings_Header}">
            <syncfusion:SfAccordion SelectionMode="OneOrMore" Margin="5,0,0,0" >
              <syncfusion:SfAccordion.HeaderTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="20" />
                </DataTemplate>
              </syncfusion:SfAccordion.HeaderTemplate>
              <syncfusion:SfAccordionItem Header="{lex:Loc settings_General}" AccordionButtonStyle="{StaticResource expanderButtonStyle}">
                <StackPanel Width="600" Margin="10,10,0,10" HorizontalAlignment="Left">
                  <GroupBox Background="Transparent" Style="{StaticResource GroupBoxStyleNoHeader}">
                    <Grid>
                      <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                      </Grid.RowDefinitions>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition/>
                      </Grid.ColumnDefinitions>
                      <Label Grid.Row="0"  Grid.Column="0" Content="{lex:Loc settings_Language}"/>
                      <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Languages}" Width="200"
                                DisplayMemberPath="Value"
                                SelectedItem="{Binding SelectedLanguage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,2"/>
                      <Label Grid.Row="1" Grid.Column="0" Content="{lex:Loc settings_Theme}"/>
                      <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Themes}" Width="200"
                            SelectedItem="{Binding SelectedTheme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,2"/>
                      <Label Grid.Row="2" Grid.Column="0" Content="{lex:Loc settings_ChangedRowColor}"/>
                      <syncfusion:ColorPicker Grid.Row="2" Grid.Column="1"  IsColorPaletteVisible="True" Margin="0,0,0,2"
                                              Color="{Binding ChangedRowColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200" />
                      <Label Grid.Row="3" Grid.Column="0" Content="{lex:Loc settings_RowColor}"/>
                      <syncfusion:ColorPicker Grid.Row="3" Grid.Column="1"  IsColorPaletteVisible="True" Margin="0,0,0,2"
                                              Color="{Binding RowColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200" />
                      <Label Grid.Row="4" Grid.Column="0" Content="{lex:Loc settings_AlternateRowColor}"/>
                      <syncfusion:ColorPicker Grid.Row="4" Grid.Column="1"  IsColorPaletteVisible="True" Margin="0,0,0,2"
                                              Color="{Binding AlternateRowColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200" />
                      <Label Grid.Row="5" Grid.Column="0" Content="{lex:Loc settings_DebugLevel}"/>
                      <ComboBox Grid.Row="5" Grid.Column="1" ItemsSource="{Binding DebugLevel}" Width="200"
                                SelectedItem="{Binding SelectedLogLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,2" />
                    </Grid>
                  </GroupBox>
                </StackPanel>
              </syncfusion:SfAccordionItem>

              <syncfusion:SfAccordionItem Header="{lex:Loc settings_Tags}" AccordionButtonStyle="{StaticResource expanderButtonStyle}" >
                <StackPanel Width="600" Margin="10,10,0,10" HorizontalAlignment="Left">
                  <GroupBox Background="Transparent" Header="{lex:Loc settings_Tags_General}" >
                    <StackPanel Orientation="Vertical">
                      <CheckBox Content="{lex:Loc settings_Tags_CopyArtist}" IsChecked="{Binding CopyArtist, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0" Height="15"/>
                      <CheckBox Content="{lex:Loc settings_Tags_AutoFillNumberTracks}" IsChecked="{Binding AutoFillNumberOfTracks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,0" Height="15"/>
                      <CheckBox Content="{lex:Loc settings_Tags_CaseConversion}" IsChecked="{Binding UseCaseConversion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,0" Height="15"/>
                      <CheckBox Content="{lex:Loc settings_Tags_ChangeReadOnly}" IsChecked="{Binding ChangeReadOnlyAttribute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,0" Height="15"/>
                      <StackPanel Orientation="Horizontal" Margin="0,10,0,0" >
                        <Label Content="{lex:Loc settings_Tags_PreferredCountries}"/>
                        <TextBox Text="{Binding PreferredMusicBrainzCountries, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="10,0,0,0"/>
                      </StackPanel>
                      <syncfusion:ButtonAdv Label="{lex:Loc settings_Tags_DownloadMusicBrainzDatabase}" HorizontalAlignment="Left"  Width="Auto" 
                                            SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_MusicBrainz_32x.png" 
                                            Command="{Binding DownloadMusicBrainzDatabaseCommand}" Margin="0,10,0,0"/>
                    </StackPanel>
                  </GroupBox>

                  <GroupBox Background="Transparent" Header="{lex:Loc settings_Id3_Header}" Margin="0,10,0,0" >
                    <StackPanel>
                      <StackPanel Orientation="Horizontal">
                        <Label Content="{lex:Loc settings_Id3_Encoding}"/>
                        <ComboBox ItemsSource="{Binding Id3Encoding}" Width="200" Margin="10,0,0,0"
                                  SelectedItem="{Binding SelectedEncoding, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                      </StackPanel>
                      <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                        <RadioButton Content="{lex:Loc settings_Id3_UseV3}"  IsChecked="{Binding ID3UseV3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0" />
                        <RadioButton Content="{lex:Loc settings_Id3_UseV4}" IsChecked="{Binding ID3UseV4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0"/>
                        <RadioButton Content="{lex:Loc settings_Id3_UseApe}" IsChecked="{Binding ID3UseApe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0"/>

                        <GroupBox Background="Transparent" Header="{lex:Loc settings_Id3_Header_Update}"  Margin="5,0,0,0">
                          <Grid>
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition />
                              <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Vertical">
                              <RadioButton Content="{lex:Loc settings_Id3_UpdateV1}"  IsChecked="{Binding ID3UpdateV1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0" />
                              <RadioButton Content="{lex:Loc settings_Id3_UpdateV2}" IsChecked="{Binding ID3UpdateV2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0"/>
                              <RadioButton Content="{lex:Loc settings_Id3_UpdateV1V2}" IsChecked="{Binding ID3UpdateV1V2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Vertical">
                              <CheckBox Content="{lex:Loc settings_Id3_UpdateRemoveV2}" IsChecked="{Binding ID3RemoveV2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding ID3RemoveV2Enabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="15" Margin="0,5,0,0"/>
                              <CheckBox Content="{lex:Loc settings_Id3_UpdateRemoveV1}" IsChecked="{Binding ID3RemoveV1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding ID3RemoveV1Enabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="15" Margin="0,5,0,0"/>
                            </StackPanel>
                          </Grid>
                        </GroupBox>

                        <CheckBox Content="{lex:Loc settings_Id3_ClearUserFrames}" IsChecked="{Binding ClearUserFrames, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0" Height="15"/>
                      </StackPanel>
                    </StackPanel>
                  </GroupBox>

                  <GroupBox Background="Transparent" Header="{lex:Loc settings_Id3_Header_MP3Validation}" Margin="0,10,0,0">
                    <StackPanel>
                      <CheckBox Content="{lex:Loc settings_Id3_ValidateMp3}" IsChecked="{Binding ValidateMp3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="15" Margin="0,5,0,0" />
                      <CheckBox Content="{lex:Loc settings_Id3_FixMp3}" IsChecked="{Binding FixMp3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="15" Margin="0,10,0,0"/>
                    </StackPanel>
                  </GroupBox>

                  <GroupBox Background="Transparent" Header="{lex:Loc settings_Id3_Header_CustomGenres}" Margin="0,10,0,0" >
                    <Grid>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="210" />
                        <ColumnDefinition Width="150" />
                      </Grid.ColumnDefinitions>
                      <syncfusion:SfDataGrid Grid.Column="0" HeaderRowHeight="0"
                                             ItemsSource="{Binding CustomGenres,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             SelectedItems="{Binding SelectedGenres}"
                                             SelectionMode="Extended"
                                             ColumnSizer="AutoWithLastColumnFill" 
                                             AllowResizingColumns="False" 
                                             AllowDraggingColumns="False" 
                                             AutoGenerateColumns="False"
                                             ShowRowHeader="False" 
                                             AllowEditing="True" 
                                             Height="200" >
                        <syncfusion:SfDataGrid.Columns>
                          <syncfusion:GridTextColumn HeaderText="{lex:Loc tagEdit_UserFrames_FrameId}" MappingName="Name" Width="205" />
                        </syncfusion:SfDataGrid.Columns>
                      </syncfusion:SfDataGrid>
                      <StackPanel Grid.Column="1" Orientation="Vertical">
                        <Button Content="{lex:Loc settings_Id3_AddGenre}" 
                                Command="{Binding AddGenreCommand}" 
                                Width="Auto" Height="25" 
                                Margin="20,5,0,0" />

                        <Button Content="{lex:Loc settings_Id3_RemoveGenre}" 
                                Command="{Binding DeleteGenreCommand}" 
                                Width="Auto" Height="25" 
                                Margin="20,5,0,0" />

                        <Button Content="{lex:Loc settings_Id3_SaveGenre}" 
                                Command="{Binding SaveGenreCommand}" 
                                Width="Auto" Height="25" 
                                Margin="20,5,0,0" />
                      </StackPanel>
                    </Grid>
                  </GroupBox>
                </StackPanel>
              </syncfusion:SfAccordionItem>

              <syncfusion:SfAccordionItem Header="{lex:Loc settings_Keys}" AccordionButtonStyle="{StaticResource expanderButtonStyle}" >
                <StackPanel Width="600" Margin="10,10,0,10" HorizontalAlignment="Left">
                  <GroupBox Background="Transparent" Style="{StaticResource GroupBoxStyleNoHeader}" >
                    <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                      <syncfusion:SfDataGrid ItemsSource="{Binding KeyMap}"
                                             SelectedItem="{Binding SelectedKeyMap,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                             SelectionMode="Single"
                                             ColumnSizer="AutoWithLastColumnFill" 
                                             AllowResizingColumns="True" 
                                             AllowDraggingColumns="False" 
                                             AutoGenerateColumns="False"
                                             ShowRowHeader="False" 
                                             AllowEditing="False" 
                                             Height="300" >
                        <syncfusion:SfDataGrid.Columns>
                          <syncfusion:GridTextColumn HeaderText="{lex:Loc settings_Keys_Header_Id}" MappingName="Id" Width="50" />
                          <syncfusion:GridTextColumn HeaderText="{lex:Loc settings_Keys_Header_Description}" MappingName="Description" Width="300" />
                          <syncfusion:GridTextColumn HeaderText="{lex:Loc settings_Keys_Header_Keys}" MappingName="Key" Width="150" />
                        </syncfusion:SfDataGrid.Columns>
                      </syncfusion:SfDataGrid>
                      <GroupBox Background="Transparent" Style="{StaticResource GroupBoxStyleNoHeader}" Margin="0,10,0,0" IsEnabled="{Binding KeyChangeGroupBoxEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <Grid Margin="0,10,0,0">
                          <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                          </Grid.RowDefinitions>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition/>
                          </Grid.ColumnDefinitions>
                          <Label Grid.Row="0" Grid.Column="0" Content="{lex:Loc settings_Keys_Description}" />
                          <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding KeyMapDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="300" HorizontalAlignment="Left" />
                          <Label Grid.Row="1" Grid.Column="0" Content="{lex:Loc settings_Keys_ShortCut}" />
                          <StackPanel Grid.Row="1" Grid.Column="1"  Margin="0,10,0,0" Orientation="Horizontal">
                            <CheckBox Content="{lex:Loc settings_Keys_Ctrl}" IsChecked="{Binding CtrlKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0" Height="15"/>
                            <CheckBox Content="{lex:Loc settings_Keys_Alt}" IsChecked="{Binding AltKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,5,0,0" Height="15" />
                            <CheckBox Content="{lex:Loc settings_Keys_Shift}" IsChecked="{Binding ShiftKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,5,0,0" Height="15"/>
                            <TextBox Text="{Binding KeyValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" Margin="10,5,0,0" />
                          </StackPanel>
                          <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,5,0,0" Orientation="Horizontal">
                            <syncfusion:ButtonAdv Label="{lex:Loc dialog_Apply}" HorizontalAlignment="Left"  Width="75" 
                                              SmallIcon="pack://application:,,,/MPTagThat;component/Resources/Images/Apply_Changes_32x.png" 
                                              Command="{Binding ApplyKeyChangeCommand}" />
                            <Label Content="{lex:Loc settings_Keys_Restart}"/>
                          </StackPanel>
                        </Grid>
                      </GroupBox>
                    </StackPanel>
                  </GroupBox>
                </StackPanel>
              </syncfusion:SfAccordionItem>
            </syncfusion:SfAccordion>
          </syncfusion:BackstageTabItem>

          <syncfusion:BackStageSeparator/>
          <syncfusion:BackStageCommandButton Header="{lex:Loc ribbon_ResetLayout}" Command="{Binding ResetLayoutCommand}" Icon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_ResetLayout_32x.png" >
            <syncfusion:RibbonButton.ToolTip>
              <syncfusion:ScreenTip MinWidth="150" MaxWidth="400" Description="{lex:Loc ribbon_ResetLayout}" VerticalOffset="10" ImageSource="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_ResetLayout_32x.png">
                <StackPanel Orientation="Vertical" Width="300">
                  <TextBlock Text="{lex:Loc screentip_ResetLayoutText}" TextWrapping="Wrap" />
                </StackPanel>
              </syncfusion:ScreenTip>
            </syncfusion:RibbonButton.ToolTip>
          </syncfusion:BackStageCommandButton>
          <syncfusion:BackStageCommandButton Header="{lex:Loc ribbon_DeleteLayout}" Command="{Binding DeleteLayoutCommand}" Icon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_DeleteLayout_32x.png" >
            <syncfusion:RibbonButton.ToolTip>
              <syncfusion:ScreenTip MinWidth="150" MaxWidth="400" Description="{lex:Loc ribbon_DeleteLayout}" VerticalOffset="10" ImageSource="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_DeleteLayout_32x.png">
                <StackPanel Orientation="Vertical" Width="300">
                  <TextBlock Text="{lex:Loc screentip_DeleteLayoutText}" TextWrapping="Wrap" />
                </StackPanel>
              </syncfusion:ScreenTip>
            </syncfusion:RibbonButton.ToolTip>
          </syncfusion:BackStageCommandButton>
          <syncfusion:BackStageSeparator/>
          <syncfusion:BackStageCommandButton Header="{lex:Loc ribbon_Exit}" Command="{Binding ExitCommand}" Icon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Exit_32x.png" />
        </syncfusion:Backstage>
      </syncfusion:Ribbon.BackStage>
    </syncfusion:Ribbon>
  </Grid>
</UserControl>
