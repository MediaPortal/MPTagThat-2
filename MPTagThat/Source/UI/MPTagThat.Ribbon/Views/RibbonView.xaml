<UserControl x:Class="MPTagThat.Ribbon.Views.RibbonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             lex:LocalizeDictionary.DesignCulture="en"
             lex:ResxLocalizationProvider.DefaultAssembly="MPTagThat"
             lex:ResxLocalizationProvider.DefaultDictionary="Strings"
             xmlns:local="clr-namespace:MPTagThat.Ribbon"
             mc:Ignorable="d">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <syncfusion:Ribbon x:Name="Ribbon" Margin="0" Grid.ColumnSpan="2" BackStageHeader="" RibbonState="Normal">
      <syncfusion:RibbonTab x:Name="TabTag" Caption="{lex:Loc ribbon_TagTab}"  IsChecked="True">
        <syncfusion:RibbonBar Name="RibbonBarRetrieveTags" Header="{lex:Loc ribbon_RetrieveTags}">
          <syncfusion:RibbonButton x:Name="ButtonTagFromFile" SizeForm="Large" Label="{lex:Loc ribbon_TagFromFile}" LargeIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_TagFromFile_32x.png" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_TagFromFile_16x.png" />
          <syncfusion:RibbonButton x:Name="ButtonIdentifyFile" SizeForm="Large" Label="{lex:Loc ribbon_IdentifyFile}" LargeIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_IdentifyFile_32x.png" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_IdentifyFile_16x.png" />
          <syncfusion:RibbonButton x:Name="ButtonTagFromInternet" SizeForm="Large" Label="{lex:Loc ribbon_TagFromInternet}" LargeIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_TagFromInternet_32x.png" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_TagFromInternet_16x.png" />
        </syncfusion:RibbonBar>
        <syncfusion:RibbonBar Name="RibbonBarEditTags" Header="{lex:Loc ribbon_EditTags}">
          <syncfusion:SplitButton x:Name="ButtonCaseConversion" SizeForm="Large" Label="{lex:Loc ribbon_CaseConversionMenu}" LargeIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_CaseConversion_32x.png" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_CaseConversion_16x.png">
            <syncfusion:DropDownMenuItem x:Name="ButtonCaseConversionOptions" Header="{lex:Loc ribbon_CaseConversionOption}"/>
          </syncfusion:SplitButton>
          <syncfusion:RibbonButton x:Name="ButtonGetLyrics" SizeForm="Large" Label="{lex:Loc ribbon_GetLyrics}" LargeIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Lyrics_32x.png" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Lyrics_16x.png" />
          <syncfusion:RibbonSeparator/>
          <syncfusion:SplitButton x:Name="ButtonFind" SizeForm="Large" Label="{lex:Loc ribbon_Find}" LargeIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Find_32x.png" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Find_16x.png">
            <syncfusion:DropDownMenuItem x:Name="ButtonReplace" Header="{lex:Loc ribbon_Replace}" Icon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Replace_16x.png" />
          </syncfusion:SplitButton>
          <syncfusion:SplitButton x:Name="ButtonValidateSong" SizeForm="Large" Label="{lex:Loc ribbon_ValidateSong}" LargeIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_BrokenSong_32x.png" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_BrokenSong_16x.png">
            <syncfusion:DropDownMenuItem x:Name="ButtonFixSong" Header="{lex:Loc ribbon_FixSong}" Icon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_FixSong_16x.png"/>
          </syncfusion:SplitButton>
          <syncfusion:RibbonSeparator/>
          <syncfusion:SplitButton x:Name="ButtonDeleteTags" SizeForm="Large" Label="{lex:Loc ribbon_DeleteTags}" LargeIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_DeleteTags_32x.png" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_DeleteTags_16x.png">
            <syncfusion:DropDownMenuItem x:Name="ButtonDeleteAllTags" Header="{lex:Loc ribbon_DeleteAllTags}" />
            <syncfusion:DropDownMenuItem x:Name="ButtonDeleteV1Tags" Header="{lex:Loc ribbon_DeleteID3V1Tags}" />
            <syncfusion:DropDownMenuItem x:Name="ButtonDeleteV2Tags" Header="{lex:Loc ribbon_DeleteID3V2Tags}" />
          </syncfusion:SplitButton>
          <syncfusion:RibbonButton x:Name="ButtonRemoveComments" SizeForm="Large" Label="{lex:Loc ribbon_RemoveComments}" LargeIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_RemoveComments_32x.png" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_RemoveComments_16x.png" />
          <syncfusion:RibbonSeparator/>
          <syncfusion:ButtonPanel SeparatorVisibility="Hidden" Height="21">
            <syncfusion:RibbonComboBox x:Name="RibbonComboBoxScript" MaxDropDownHeight="150" Width="100" Height="18"  />
            <syncfusion:RibbonButton x:Name="ButtonExecuteScripts" SizeForm="Small" Label="" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_ScriptExecute_16x.png" RenderTransformOrigin="4.321,0.658" Height="18" />
          </syncfusion:ButtonPanel>
          <syncfusion:ButtonPanel SeparatorVisibility="Hidden" Height="21">
            <syncfusion:RibbonButton x:Name="ButtonAutoNumber" SizeForm="Small" Label="" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_AutoNumber_16x.png" />
            <syncfusion:RibbonButton x:Name="ButtonNumberOnClick" SizeForm="Small" Label="" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_NumberOnClick_16x.png" />
            <syncfusion:IntegerTextBox x:Name="TextBoxNumberOnClick" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="25" MinValue="1" MaxValue="99999" />
          </syncfusion:ButtonPanel>
          <syncfusion:ButtonPanel SeparatorVisibility="Hidden" Height="21">
            <syncfusion:RibbonButton x:Name="ButtonGain" SizeForm="Small" Label="" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Gain_16x.png" />
            <syncfusion:RibbonButton x:Name="ButtonBpm" SizeForm="Small" Label="" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Bpm_16x.png" />
          </syncfusion:ButtonPanel>
        </syncfusion:RibbonBar>
        <syncfusion:RibbonBar Name="RibbonBarCoverArt" Header="{lex:Loc ribbon_Picture}">
          <syncfusion:RibbonGallery x:Name="RibbonCoverArt" HorizontalAlignment="Left" Height="66" VerticalAlignment="Top" Width="81" Margin="1" />
          <syncfusion:RibbonButton x:Name="ButtonGetCoverArt" SizeForm="Small" Label="" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_CoverArt_16x.png" />
          <syncfusion:RibbonButton x:Name="ButtonRemoveCoverArt" SizeForm="Small" Label="" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_RemovePictures_16x.png" />
          <syncfusion:RibbonButton x:Name="ButtonSaveCoverArt" SizeForm="Small" Label="" SmallIcon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_Save_16x.png" />
        </syncfusion:RibbonBar>
      </syncfusion:RibbonTab>
      <syncfusion:RibbonTab x:Name="TabRip" Caption="{lex:Loc ribbon_RipTab}"  IsChecked="False"/>
      <syncfusion:RibbonTab x:Name="TabConvert" Caption="{lex:Loc ribbon_ConvertTab}"  IsChecked="False"/>
      <syncfusion:RibbonTab x:Name="TabBurn" Caption="{lex:Loc ribbon_BurnTab}"  IsChecked="False"/>
      <syncfusion:RibbonTab x:Name="TabDatabase" Caption="{lex:Loc ribbon_DatabaseTab}"  IsChecked="False"/>

      <syncfusion:Ribbon.BackStage>
        <syncfusion:Backstage>
          <syncfusion:BackStageSeparator/>
          <syncfusion:BackStageCommandButton Header="{lex:Loc ribbon_ResetLayout}" Command="{Binding ResetLayoutCommand}" Icon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_ResetLayout_32x.png" />
          <syncfusion:BackStageCommandButton Header="{lex:Loc ribbon_DeleteLayout}" Command="{Binding DeleteLayoutCommand}" Icon="pack://application:,,,/MPTagThat.Ribbon;component/Resources/Images/ribbon_DeleteLayout_32x.png" />
          <syncfusion:BackStageSeparator/>
        </syncfusion:Backstage>
      </syncfusion:Ribbon.BackStage>
    </syncfusion:Ribbon>
  </Grid>
</UserControl>
