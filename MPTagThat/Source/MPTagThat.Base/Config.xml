<?xml version="1.0" encoding="utf-8"?>
<config>
  <!-- 
	Setting Portable to "1" allows to run the application from a USB stick 
    All Settings are stored in <ApplicationStartupPath>\Config folder
	The Log is written to the <ApplicationStartupPath>\Logs folder
  -->
  <portable>0</portable>
  
  <!--
	The following Parameter controls how many songs will be held in memory.
	If this mark is reached, the songs will be stored in a temporary database to prevent Out of Memory issues on large collections
  -->
  <MaximumNumberOfSongsInList>500</MaximumNumberOfSongsInList>
  
  <!-- 	The following Parameter sets the location of the Music Database.
		Either specify an absolut path or use variables %PROGRAMDATA% or %APPDATA% 
  -->
  <MusicDatabaseFolder>%APPDATA%\MPTagThat2\Databases</MusicDatabaseFolder>

  <!-- 	The following Parameter sets the location of the Coberart to be used together with the Music Database.
		Either specify an absolut path or use variables %PROGRAMDATA% or %APPDATA% 
  -->
  <CoverArtFolder>%APPDATA%\MPTagThat2\CoverArt</CoverArtFolder>
  
</config>